{
  "name": "brisk",
  "version": "0.1.0",
  "description": "Brisk is a set of tools for building fast native UIs",
  "repository": "https://github.com/briskml/brisk.git",
  "license": "MIT",
  "esy": {
    "build": [["refmterr", "jbuilder", "build", "@install"]],
    "buildsInSource": "_build"
  },
  "scripts": {
    "build:dev": "refmterr jbuilder build @install --dev --no-buffer",
    "clean": "jbuilder clean",
    "test": "refmterr jbuilder runtest --no-buffer",
    "bootstrap:cocoa": "make -C renderer_cocoa/lib bootstrap",
    "bootstrap:mac": "make -C BRTesterMac/mac bootstrap",
    "run:mac": "make -C BRTesterMac/mac run",
    "test:mac": "make -C BRTesterMac/mac test"
  },
  "dependencies": {
    "@esy-ocaml/esy-installer": "*",
    "@esy-ocaml/reason": "facebook/reason#f4578da",
    "@opam/merlin-extend": "*",
    "@opam/jbuilder": "*",
    "@opam/ppx_deriving": "^4.2.1",
    "flex": "briskml/flex#21dc063",
    "refmterr": "^3.1.7"
  },
  "peerDependencies": {
    "ocaml": "~4.7.1"
  },
  "devDependencies": {
    "@esy-ocaml/merlin": "^3.0.5",
    "@opam/alcotest": "^0.8.3",
    "@opam/easy-format": "^1.3.1",
    "@opam/ocp-indent": "^1.6.1",
    "@opam/simple-diff": "0.3",
    "ocaml": "~4.7.1",
    "xcodegen": "^1.10.3",
    "xcpretty": "^0.2.8"
  },
  "resolutions": {
    "**/@esy-ocaml/reason": "github:facebook/reason#f4578da",
    "**/@opam/result": "1.2",
    "**/@opam/merlin-extend": "0.3",
    "**/@opam/jbuilder": "transition"
  }
}
